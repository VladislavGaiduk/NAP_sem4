            fx:controller="com.example.gui.controllers.AdminMainController" fx:id="borderPane">
    <left>
        <VBox fx:id="leftPanel" prefWidth="50">
            <Button fx:id="menuButton" text="≡" onAction="#handleOpenMenu" style="-fx-font-size: 20; -fx-padding: 10;"/>
            <Button fx:id="logoutButton" text="Выйти" onAction="#handleLogout" style="-fx-padding: 10;"/>
        </VBox>
    </left>
    <center>
        <VBox fx:id="dynamicContent"/>
    </center>
</BorderPane>